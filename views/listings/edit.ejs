<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>Edit List</h2>
    <form action="/listings/<%= listingData._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" class="form-control" value="<%= listingData.title %>" required>
        </div>
        <br>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required><%= listingData.description %></textarea>
        </div>
        <br>
        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="url" name="listing[image]" class="form-control" value="<%= listingData.image.url%>">
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
        <input type="number" name="listing[price]" class="form-control" value="<%= listingData.price %>" required>
        </div>
        <br>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="location" class="form-label">Location</label>
        <input type="text" name="listing[location]" class="form-control" value="<%= listingData.location %>" required>
        </div>
        <br>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">country</label>
        <input type="text" name="listing[country]" class="form-control" value="<%= listingData.country %>" required>
        <br><br>
        <button class="btn btn-dark edit-btn">Add</button>
    </form>  
    </div>
</div>